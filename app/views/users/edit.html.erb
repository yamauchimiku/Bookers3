<div class="container mt-3">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <!--form-groupでフォームの大きさを調整-->
        <div class="form-group">
          <!--ラベルの名前-->
          <%= f.label :Name %>
          <!--form-controlをclassに指定-->
          <!--text_fieldは一行のテキストを入力-->
          <%= f.text_field :name, class: 'form-control user_name' %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.attachment_field :myprofile_image, class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <%= f.label :Introduction %>
          <!--長い文章であればtext_area-->
          <%= f.text_area :information, class: 'form-control user_information' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>
