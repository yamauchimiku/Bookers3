<div class="container mt-3">
  <!--サクセスメッセージの表示-->
  <p id="notice", class="text-success"></p>
  <div class="row">
    <div class="col-lg-3">
      <h2>User info</h2>
        <%= render 'info', user: current_user %>
      <h2>New book</h2>
        <%= render 'books/form', book: @book %>
    </div>
    <!--offsetで左側に空白を作る-->
    <div class="col-lg-8 offset-lg-1">
      <h2>Books</h2>
        <%= render 'books/index', books: @books %>
    </div>
  </div>
</div>